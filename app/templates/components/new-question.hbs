{{#if addNewQuestion}}
<h1>New Question</h1>
<div class="querry">
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date"}}
      </div>


        <div class="form-group">
          <label for="question">Question</label>
          {{input value=question id="question"}}
        </div>
</form>
</div>
{{else}}
<button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
