{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div class="querry">
    <form>
      <div class="form-group">
        <label for="author">Author</label> {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label> {{input value=date id="date"}}
      </div>

      <div class="form-group">
        <label for="date">Question title</label> {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="date">Image</label> {{input value=image id="image"}}
      </div>

      <div class="form-group">
        <label for="question">Question</label> {{textarea value=question id="question"}}
      </div>
      <button {{action 'saveQuestion1' question}}>Save</button>
      <button {{action 'questionFormHide'}}>Hide</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
